<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/customIcon" layout="@layout/editable_icon_element"/>
    <TextView android:textColor="@color/white" android:id="@+id/sensivitySliderText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sensitivity_text"/>
    <SeekBar android:id="@+id/sensivitySlider" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="500" android:progress="80" android:progressBackgroundTint="@color/white"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/bindingsView" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/movement_type" android:layout_weight="0"/>
        <Spinner android:id="@+id/axisType" android:layout_width="match_parent" android:layout_height="35dp" android:foreground="@color/lighterRecordBg" android:popupBackground="@color/darkGray" android:backgroundTint="@color/white"/>
        <TextView android:textColor="@color/white" android:id="@+id/axisSelectorLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/axis" android:layout_weight="0"/>
        <Spinner android:id="@+id/axisSelector" android:layout_width="match_parent" android:layout_height="35dp" android:foreground="@color/lighterRecordBg" android:popupBackground="@color/darkGray" android:backgroundTint="@color/white"/>
    </LinearLayout>
</LinearLayout>
