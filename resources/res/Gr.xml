        <Button android:id="@+id/exportIconPack" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/exportTxt" android:layout_weight="1" android:layout_marginStart="5dp"/>
    </LinearLayout>
</LinearLayout>
