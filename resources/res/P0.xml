<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textColor="@color/white" android:id="@+id/text" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/icon_text"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Spinner android:id="@+id/icon" android:layout_width="match_parent" android:layout_height="35dp" android:foreground="@color/lighterRecordBg" android:popupBackground="@color/darkGray" android:layout_weight="1" android:backgroundTint="@color/white"/>
        <ImageView android:id="@+id/openIconSettings" android:padding="5dp" android:layout_width="35dp" android:layout_height="35dp" android:src="@drawable/wrench"/>
    </LinearLayout>
</LinearLayout>
