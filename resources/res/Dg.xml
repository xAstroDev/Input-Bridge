<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:background="#f3f3f3" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/icon" android:layout_width="35dp" android:layout_height="35dp" android:src="@drawable/gamepad_icon"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/linearLayout3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="10dp">
        <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/darkGray" android:ellipsize="end" android:id="@+id/contName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/dummy" android:maxLines="1" android:layout_weight="1" android:textAllCaps="true"/>
        <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="@color/darkGray" android:id="@+id/contMac" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/dummy" android:layout_weight="1"/>
        <TextView android:textSize="10sp" android:textColor="@color/darkGray" android:id="@+id/contType" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/dummy" android:layout_weight="1"/>
    </LinearLayout>
    <Button android:id="@+id/removeCont" android:layout_width="40dp" android:layout_height="40dp" android:text="@string/close_icon" android:layout_marginStart="10dp"/>
</LinearLayout>
