<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:orientation="vertical" android:background="@color/halfBlack" android:padding="8dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:padding="8dp" android:layout_width="350dp" android:layout_height="200dp">
        <TextView android:textSize="20sp" android:textColor="@color/darkGray" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="text"/>
        <View android:background="@color/lightestGray" android:layout_width="match_parent" android:layout_height="2dp"/>
        <TextView android:textSize="14sp" android:textColor="@color/darkGray" android:id="@+id/text" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/dummy" android:layout_weight="1"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:id="@+id/ok" android:layout_width="wrap_content" android:layout_height="40dp" android:text="@string/dummy" android:layout_weight="1"/>
            <Button android:id="@+id/no" android:layout_width="wrap_content" android:layout_height="40dp" android:text="@string/dummy" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
