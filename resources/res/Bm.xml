<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:isScrollContainer="false">
    <com.catfixture.inputbridge.ui.custom.Chapter android:layout_width="match_parent" android:layout_height="wrap_content" app:title="@string/generalSettingsTab"/>
    <Spinner android:id="@+id/languageSpinner" android:background="#f3f3f3" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:popupBackground="#f3f3f3" android:layout_weight="0"/>
    <CheckBox android:textColor="@color/darkGray" android:id="@+id/enableDebug" android:layout_width="match_parent" android:layout_height="30dp" android:text="@string/enable_debugging" android:layout_marginStart="-7dp"/>
    <CheckBox android:textColor="@color/darkGray" android:id="@+id/autoCheckUpdates" android:visibility="gone" android:layout_width="match_parent" android:layout_height="30dp" android:text="@string/auto_check_updates_text" android:layout_marginStart="-7dp"/>
    <EditText android:textSize="16sp" android:textColor="@color/black" android:textColorHint="@color/lightestGray" android:id="@+id/updateServerAddr" android:background="#f3f3f3" android:padding="5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="" android:hint="@string/update_server" android:ems="10" android:layout_weight="0"/>
    <com.catfixture.inputbridge.ui.custom.Chapter android:layout_width="match_parent" android:layout_height="wrap_content" app:title="@string/root_folder_text"/>
    <RelativeLayout android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText android:enabled="false" android:textSize="16sp" android:textColor="@color/black" android:textColorHint="@color/lightestGray" android:id="@+id/appFolder" android:background="#f3f3f3" android:layout_width="match_parent" android:layout_height="35dp" android:text="@string/dummy" android:ems="10"/>
        <Button android:id="@+id/editAppFolderButton" android:background="@drawable/ib_button" android:padding="0dp" android:layout_width="35dp" android:layout_height="35dp" android:text="@string/edit_unicode" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <com.catfixture.inputbridge.ui.custom.Chapter android:layout_width="match_parent" android:layout_height="wrap_content" app:title="@string/install"/>
    <Button android:textColor="@color/white" android:id="@+id/rootInstall" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/install_root" android:layout_weight="0" android:backgroundTint="@color/blueSat"/>
    <Button android:textColor="@color/white" android:id="@+id/copyInstaller" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/copy_installer_to_downloads" android:layout_weight="0" android:backgroundTint="@color/blueSat"/>
    <Button android:textColor="@color/white" android:id="@+id/update" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/check_for_updates" android:backgroundTint="@color/blueSat"/>
    <Button android:textColor="@color/white" android:id="@+id/openIconsManager" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/open_icons_manager"/>
</LinearLayout>
