<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="top" android:orientation="horizontal" android:id="@+id/borderView" android:background="@color/white" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:textColor="@color/white" android:id="@+id/rebLab" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/dummy"/>
            <include android:id="@+id/buttonRebindingCont" android:visibility="gone" layout="@layout/keyboard_binding"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/motionRebindingCont" android:layout_width="match_parent" android:layout_height="match_parent">
                <Spinner android:id="@+id/motionType" android:layout_width="match_parent" android:layout_height="35dp" android:layout_marginTop="5dp" android:foreground="@color/lighterRecordBg" android:popupBackground="@color/darkGray" android:layout_weight="1" android:backgroundTint="@color/white"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/multibindCont" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textColor="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/positive_axis_text"/>
                    <include android:id="@+id/posBindCont" layout="@layout/keyboard_binding"/>
                    <TextView android:textColor="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/negative_axis_text"/>
                    <include android:id="@+id/negBindCont" layout="@layout/keyboard_binding"/>
                </LinearLayout>
                <TextView android:textColor="@color/white" android:id="@+id/sensivitySliderText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/sensitivity_text"/>
                <SeekBar android:id="@+id/sensivitySlider" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="300" android:progress="100" android:progressBackgroundTint="@color/white"/>
                <TextView android:textColor="@color/white" android:id="@+id/deadZoneSliderText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/deadzone_text"/>
                <SeekBar android:id="@+id/deadZoneSlider" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="100" android:progress="20" android:progressBackgroundTint="@color/white"/>
            </LinearLayout>
        </LinearLayout>
        <Button android:id="@+id/remove" android:layout_width="45dp" android:layout_height="45dp" android:text="@string/close_icon" android:layout_marginStart="5dp"/>
    </LinearLayout>
</LinearLayout>
