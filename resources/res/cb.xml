<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
        <Spinner android:id="@+id/controlType" android:layout_width="match_parent" android:layout_height="35dp" android:foreground="@color/lighterRecordBg" android:popupBackground="@color/darkGray" android:layout_weight="1" android:backgroundTint="@color/white"/>
        <Button android:id="@+id/removeControl" android:layout_width="wrap_content" android:layout_height="40dp" android:text="@string/remove" android:layout_weight="0" android:layout_marginStart="5dp"/>
    </LinearLayout>
    <ScrollView android:id="@+id/touch_element_settings_scroll" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:id="@+id/table" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textColor="@color/white" android:id="@+id/opacitySliderText" android:layout_width="100dp" android:layout_height="wrap_content" android:text="@string/opacity_local" android:layout_weight="0"/>
            <SeekBar android:id="@+id/opacitySlider" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="80" android:progress="80" android:layout_weight="1" android:progressBackgroundTint="@color/white"/>
            <TextView android:textColor="@color/white" android:id="@+id/sizeSliderText" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/size_text" android:layout_weight="0"/>
            <SeekBar android:id="@+id/sizeSlider" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="280" android:progress="100" android:layout_weight="1" android:progressBackgroundTint="@color/white"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
