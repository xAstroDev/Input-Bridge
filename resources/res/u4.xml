<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/head" android:background="@color/lighterGray" android:padding="5dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textStyle="bold" android:textColor="@color/white" android:gravity="left" android:id="@+id/titleText" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/dummy" android:textAllCaps="true"/>
        <ImageView android:id="@+id/spoilerStatus" android:background="@drawable/tc_minus_1" android:padding="0dp" android:layout_width="17dp" android:layout_height="17dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/content" android:background="#f3f3f3" android:padding="5dp" android:layout_width="match_parent" android:layout_height="match_parent"/>
</LinearLayout>
