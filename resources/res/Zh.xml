<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/black" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.catfixture.inputbridge.ui.custom.Crosshair android:id="@+id/mainCrosshair" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <RelativeLayout android:id="@+id/controlsView" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/editorWin" android:background="@color/blackTrans" android:clipChildren="false" android:clipToPadding="false" android:layout_width="300dp" android:layout_height="match_parent" android:minWidth="300dp">
        <LinearLayout android:gravity="right|center_vertical|center_horizontal|center|end" android:orientation="horizontal" android:background="@color/spinnerBg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="0">
            <ImageView android:id="@+id/showToolbar" android:background="@color/darkGray" android:padding="6dp" android:layout_width="35dp" android:layout_height="35dp" android:src="@drawable/wrench" android:layout_weight="0" android:layout_marginStart="5dp" android:layout_marginEnd="5dp"/>
            <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
            <Button android:id="@+id/editorSettings" android:layout_width="wrap_content" android:layout_height="45dp" android:text="@string/setup" android:layout_weight="0" android:layout_marginEnd="5dp" android:backgroundTint="@color/darkGray"/>
            <Button android:id="@+id/exit" android:layout_width="wrap_content" android:layout_height="45dp" android:text="@string/exit" android:layout_weight="0" android:layout_marginEnd="5dp" android:backgroundTint="@color/darkGray"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/controlsContainer" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
            <LinearLayout android:orientation="vertical" android:id="@+id/customContainer" android:padding="5dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"/>
            <com.catfixture.inputbridge.ui.custom.WarningComponent android:id="@+id/noItemErr" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="1" app:warningText="@string/cre_or_sel_cc_el"/>
            <Button android:id="@+id/createControl" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/create_control_element"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/settingsContainer" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="0">
            <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <CheckBox android:textSize="14sp" android:textColor="@color/white" android:id="@+id/showBackground" android:layout_width="match_parent" android:layout_height="40dp" android:text="@string/show_background"/>
                    <include android:id="@+id/editorBgColor" layout="@layout/color_picker_field_layout"/>
                    <TextView android:textColor="@color/white" android:id="@+id/globalSensivityText" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/global_sensivity" android:layout_marginStart="10dp"/>
                    <SeekBar android:id="@+id/globalSensivity" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="1000" android:progress="100" android:progressBackgroundTint="@color/white"/>
                    <TextView android:textColor="@color/white" android:id="@+id/uiOpacityText" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/ui_opacity" android:layout_marginStart="10dp"/>
                    <SeekBar android:id="@+id/uiOpacity" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="100" android:progress="100" android:progressBackgroundTint="@color/white"/>
                    <TextView android:textColor="@color/white" android:id="@+id/snappingSizeText" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/snapping_size_text" android:layout_marginStart="10dp"/>
                    <SeekBar android:id="@+id/snappingSize" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="50" android:progress="10" android:progressBackgroundTint="@color/white"/>
                    <include android:id="@+id/pressTintColor" layout="@layout/color_picker_field_layout"/>
                    <CheckBox android:textSize="14sp" android:textColor="@color/white" android:id="@+id/screenAsMouse" android:layout_width="match_parent" android:layout_height="40dp" android:text="@string/all_screen_is_mouse_zone"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/fineTuneContainer" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="0"/>
    </LinearLayout>
    <include android:id="@+id/toolbar" android:visibility="gone" layout="@layout/editor_toolbar_layout"/>
</RelativeLayout>
